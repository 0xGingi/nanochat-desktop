{
  "app-id": "org.nanochat.desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node20",
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "nanochat-desktop",
  "finish-args": [
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node20/bin:/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "nanochat-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "npm ci",
        "npm run build",
        "cd src-tauri && cargo build --release",
        "install -Dm755 src-tauri/target/release/app /app/bin/nanochat-desktop",
        "install -Dm644 flatpak/org.nanochat.desktop.desktop /app/share/applications/org.nanochat.desktop.desktop",
        "install -Dm644 flatpak/org.nanochat.desktop.metainfo.xml /app/share/metainfo/org.nanochat.desktop.metainfo.xml",
        "install -Dm644 src-tauri/icons/128x128.png /app/share/icons/hicolor/128x128/apps/org.nanochat.desktop.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
