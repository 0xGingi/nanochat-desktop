{
  "app-id": "org.nanochat.desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "nanochat-desktop",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=xdg-config/nanochat-desktop:create"
  ],
  "modules": [
    {
      "name": "nanochat-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/bin/npm install",
        "/usr/bin/npm run tauri build -- --bundles flatpak",
        "cp -r src-tauri/target/release/bundle/flatpak/org.nanochat.desktop/* /app/"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
